        function updatePaginationControls() {
            const prevBtns = [document.getElementById('prevPageBtn'), document.getElementById('prevPageBtn2')];
            const nextBtns = [document.getElementById('nextPageBtn'), document.getElementById('nextPageBtn2')];
            const paginationInfos = [document.getElementById('paginationInfo'), document.getElementById('paginationInfo2')];
            const paginationControls = [document.getElementById('paginationTop'), document.getElementById('paginationBottom')];
            
            // Show/hide pagination controls
            const showPagination = totalPages > 1;
            paginationControls.forEach(control => {
                if (control) control.style.display = showPagination ? 'flex' : 'none';
            });
            
            if (showPagination) {
                // Update info text
                const infoText = `Page ${currentPage} of ${totalPages} (${totalOrders} orders)`;
                paginationInfos.forEach(info => {
                    if (info) info.textContent = infoText;
                });
                
                // Update button states
                prevBtns.forEach(btn => {
                    if (btn) btn.disabled = currentPage <= 1;
                });
                
                nextBtns.forEach(btn => {
                    if (btn) btn.disabled = currentPage >= totalPages;
                });
            }
        }

