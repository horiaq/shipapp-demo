    <script>
        // Initialize Feather Icons
        feather.replace();

        let selectedFile = null;
        let currentOrders = [];
        let selectedOrders = new Set(); // For checkbox selections
        let currentPage = 1;
        let totalPages = 1;
        let totalOrders = 0;
        
        // Workspace management
        let currentWorkspaceId = parseInt(localStorage.getItem('currentWorkspaceId')) || 1;
        let allWorkspaces = [];

        // Tab Navigation
        function switchTab(tabName) {
            // Update nav items
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');

            // Update content
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });
            document.getElementById(`${tabName}Tab`).classList.remove('hidden');

            // Update page title
            const titles = {
                orders: 'Orders Management',
                upload: 'Import Orders',
                vouchers: 'Voucher History',
                reports: 'Reports & Analytics',
                settings: 'System Settings'
            };
            document.getElementById('pageTitle').textContent = titles[tabName];

            // Load data if needed
            if (tabName === 'orders') {
                loadOrders();
            }
            
            // Load settings when switching to settings tab
            if (tabName === 'settings') {
                loadWorkspaceSettings();
            }
            
            // Refresh feather icons
            feather.replace();
        }

        // Event listeners for navigation
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const tab = item.dataset.tab;
                switchTab(tab);
            });
        });

        // ==================== WORKSPACE MANAGEMENT ====================
        
        async function loadWorkspaces() {
            try {
                const response = await fetch('/api/workspaces');
                const data = await response.json();
                
                if (data.success) {
                    allWorkspaces = data.workspaces;
                    
                    // Verify currentWorkspaceId exists in loaded workspaces
                    const workspaceExists = allWorkspaces.some(w => w.workspace_id === currentWorkspaceId);
                    if (!workspaceExists && allWorkspaces.length > 0) {
                        // If saved workspace doesn't exist, default to first workspace
                        currentWorkspaceId = allWorkspaces[0].workspace_id;
                        localStorage.setItem('currentWorkspaceId', currentWorkspaceId);
                        console.log(`‚ö†Ô∏è Saved workspace not found, defaulting to workspace ${currentWorkspaceId}`);
                    }
                    
                    updateWorkspaceUI();
                    console.log(`‚úÖ Loaded ${allWorkspaces.length} workspaces, current workspace: ${currentWorkspaceId}`);
                }
            } catch (error) {
                console.error('Error loading workspaces:', error);
                showAlert('Failed to load workspaces', 'error');
            }
        }
        
        function updateWorkspaceUI() {
            const currentWorkspace = allWorkspaces.find(w => w.workspace_id === currentWorkspaceId);
            
            if (currentWorkspace) {
                const flag = getCountryFlag(currentWorkspace.country);
                document.getElementById('currentWorkspaceName').textContent = `${flag} ${currentWorkspace.workspace_name}`;
            }
            
            // Update workspace dropdown
            const dropdown = document.getElementById('workspaceDropdown');
            dropdown.innerHTML = allWorkspaces.filter(w => w.is_active !== false).map(workspace => {
                const flag = getCountryFlag(workspace.country);
                return `
                <div class="workspace-option ${workspace.workspace_id === currentWorkspaceId ? 'selected' : ''}" 
                     onclick="switchWorkspace(${workspace.workspace_id})">
                    <span>${flag} ${workspace.workspace_name}</span>
                    ${workspace.workspace_id === currentWorkspaceId ? '<i data-feather="check" style="width: 16px; height: 16px;"></i>' : ''}
                </div>
            `}).join('');
            
            feather.replace();
        }
        
        function toggleWorkspaceDropdown() {
            const dropdown = document.getElementById('workspaceDropdown');
            dropdown.classList.toggle('active');
        }
        
        async function switchWorkspace(workspaceId) {
            if (workspaceId === currentWorkspaceId) {
                toggleWorkspaceDropdown();
                return;
            }
            
            currentWorkspaceId = workspaceId;
            localStorage.setItem('currentWorkspaceId', workspaceId);
            
            updateWorkspaceUI();
            toggleWorkspaceDropdown();
            
            // Reload orders for new workspace
            currentPage = 1;
            await loadOrders();
            
            const workspace = allWorkspaces.find(w => w.workspace_id === workspaceId);
            showAlert(`‚úÖ Switched to workspace: ${workspace.workspace_name}`, 'success');
            
            console.log(`üîÑ Switched to workspace: ${workspaceId}`);
        }
        
        async function showAddWorkspaceModal() {
            const workspaceName = prompt('Enter new workspace name:');
            
            if (!workspaceName || workspaceName.trim() === '') {
                return;
            }
            
            const storeName = prompt('Enter store name (optional):');
            const storeUrl = prompt('Enter store URL (optional):');
            
            try {
                const response = await fetch('/api/workspaces', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        workspace_name: workspaceName.trim(),
                        store_name: storeName?.trim() || workspaceName.trim(),
                        store_url: storeUrl?.trim() || ''
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert(`‚úÖ Workspace "${data.workspace.workspace_name}" created successfully!`, 'success');
                    await loadWorkspaces();
                } else {
                    showAlert(`‚ùå Failed to create workspace: ${data.error}`, 'error');
                }
            } catch (error) {
                console.error('Error creating workspace:', error);
                showAlert('‚ùå Network error creating workspace', 'error');
            }
        }
        
        // Helper to add workspace ID to all API calls
        function getWorkspaceHeaders() {
            return {
                'x-workspace-id': currentWorkspaceId.toString()
            };
        }
        
        function getWorkspaceQueryParam() {
            return `workspaceId=${currentWorkspaceId}`;
        }
        
        // Country flag helper
        function getCountryFlag(countryCode) {
            const flags = {
                'GR': 'üá¨üá∑', 'US': 'üá∫üá∏', 'GB': 'üá¨üáß', 'DE': 'üá©üá™', 'FR': 'üá´üá∑',
                'IT': 'üáÆüáπ', 'ES': 'üá™üá∏', 'NL': 'üá≥üá±', 'BE': 'üáßüá™', 'CH': 'üá®üá≠',
                'AT': 'üá¶üáπ', 'PL': 'üáµüá±', 'CZ': 'üá®üáø', 'RO': 'üá∑üá¥', 'BG': 'üáßüá¨',
                'HR': 'üá≠üá∑', 'CY': 'üá®üáæ', 'DK': 'üá©üá∞', 'FI': 'üá´üáÆ', 'IE': 'üáÆüá™',
                'LU': 'üá±üá∫', 'MT': 'üá≤üáπ', 'PT': 'üáµüáπ', 'SE': 'üá∏üá™', 'NO': 'üá≥üá¥',
                'CA': 'üá®üá¶', 'AU': 'üá¶üá∫'
            };
            return flags[countryCode] || 'üåç';
        }
        
        // ==================== SETTINGS PAGE ====================
        
        async function loadWorkspaceSettings() {
            try {
                const workspace = allWorkspaces.find(w => w.workspace_id === currentWorkspaceId);
                
                if (!workspace) {
                    showAlert('‚ùå Workspace not found', 'error');
                    return;
                }
                
                // Populate form fields
                document.getElementById('settingsWorkspaceName').value = workspace.workspace_name || '';
                document.getElementById('settingsStoreName').value = workspace.store_name || '';
                document.getElementById('settingsStoreUrl').value = workspace.store_url || '';
                document.getElementById('settingsCountry').value = workspace.country || 'GR';
                document.getElementById('settingsShopifyShop').value = workspace.shopify_shop || '';
                document.getElementById('settingsShopifyToken').value = workspace.shopify_access_token || '';
                document.getElementById('settingsIsActive').checked = workspace.is_active !== false;
                
                console.log('‚úÖ Loaded settings for workspace:', workspace.workspace_name);
            } catch (error) {
                console.error('Error loading workspace settings:', error);
                showAlert('‚ùå Failed to load settings', 'error');
            }
        }
        
        async function saveWorkspaceSettings() {
            const workspaceName = document.getElementById('settingsWorkspaceName').value.trim();
            const country = document.getElementById('settingsCountry').value;
            
            if (!workspaceName) {
                showAlert('‚ùå Workspace name is required', 'error');
                return;
            }
            
            if (!country) {
                showAlert('‚ùå Please select a country', 'error');
                return;
            }
            
            try {
                const updateData = {
                    workspace_name: workspaceName,
                    store_name: document.getElementById('settingsStoreName').value.trim(),
                    store_url: document.getElementById('settingsStoreUrl').value.trim(),
                    country: country,
                    shopify_shop: document.getElementById('settingsShopifyShop').value.trim(),
                    shopify_access_token: document.getElementById('settingsShopifyToken').value.trim(),
                    is_active: document.getElementById('settingsIsActive').checked
                };
                
                const response = await fetch(`/api/workspaces/${currentWorkspaceId}`, {
                    method: 'PUT',
                    headers: {
