            try {
                const response = await fetch('/api/bulk-vouchers-from-csv', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        limit: pendingOrders.length
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    showAlert(`‚úÖ Bulk processing completed: ${result.successful}/${result.processed} successful`, 'success');
                    loadOrders(); // Refresh the table
