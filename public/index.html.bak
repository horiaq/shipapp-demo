        // Bulk operations for selected orders
        async function bulkCreateVouchersSelected() {
            if (selectedOrders.size === 0) {
                showAlert('Please select orders first', 'error');
                return;
            }

            const orderIds = Array.from(selectedOrders);
            showLoading('uploadResults', `Creating vouchers for ${orderIds.length} selected orders...`);

            try {
                const promises = orderIds.map(orderId => 
                    fetch(`/api/imported-orders/${encodeURIComponent(orderId)}/voucher`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ workspaceId: currentWorkspaceId })
                    }).then(response => response.json())
                );

                const results = await Promise.all(promises);
                
                let successful = 0;
                let failed = 0;
                
                results.forEach((result, index) => {
                    if (result.success) {
                        successful++;
                    } else {
                        failed++;
                        console.error(`Failed to create voucher for ${orderIds[index]}:`, result.error);
                    }
                });

                if (successful > 0) {
                    showAlert(`‚úÖ Successfully created ${successful} vouchers${failed > 0 ? ` (${failed} failed)` : ''}`, 'success');
                    loadOrders(); // Refresh to show updated status
                    clearSelection();
                } else {
                    showAlert(`‚ùå Failed to create vouchers for all selected orders`, 'error');
                }
                
                // Clear loading message
                const resultsDiv = document.getElementById('uploadResults');
                if (resultsDiv) resultsDiv.innerHTML = '';
            } catch (error) {
                // Clear loading message
                const resultsDiv = document.getElementById('uploadResults');
                if (resultsDiv) resultsDiv.innerHTML = '';
                showAlert('Error creating bulk vouchers: ' + error.message, 'error');
            }
        }

        async function exportSelectedOrders() {
            if (selectedOrders.size === 0) {
                showAlert('Please select orders first', 'error');
                return;
            }

            const selectedOrderData = currentOrders.filter(order => selectedOrders.has(order.orderId));
            
            // Create comprehensive CSV content
            const csvHeaders = [
                'Order ID', 'Order Date', 'Customer Name', 'Email', 'Phone', 
                'Shipping Address', 'City', 'ZIP Code', 'Country',
                'Products (with Quantities)', 'Order Amount', 'Payment Method', 'Payment Status', 'Outstanding Balance',
                'Voucher/Label Number', 'Voucher Status', 'Import Date', 'Notes'
            ];
            
            const csvRows = selectedOrderData.map(order => {
                // Format products with quantities (same as displayed in table)
                let productsText = '';
                if (order.products && Array.isArray(order.products)) {
                    productsText = order.products.map(p => `${p.quantity}x ${p.name}`).join('; ');
                } else if (order.lineItems) {
                    productsText = order.lineItems;
                } else {
                    productsText = 'No products listed';
                }
                
                // Format full shipping address
                const fullAddress = [
                    order.address1,
                    order.address2 
                ].filter(Boolean).join(', ');
                
                return [
                    order.orderId || order.orderName || '',
                    order.createdAt ? new Date(order.createdAt).toLocaleDateString('en-GB') : new Date(order.importedAt).toLocaleDateString('en-GB'),
                    `${order.firstName || ''} ${order.lastName || ''}`.trim(),
                    order.email || '',
                    order.phone || '',
                    fullAddress || order.shippingAddress || '',
                    order.city || '',
                    order.zip || '',
                    order.country || 'GR',
                    productsText,
                    `‚Ç¨${parseFloat(order.totalPrice || 0).toFixed(2)}`,
                    order.paymentMethod || (order.paymentStatus === 'paid' ? 'Shopify Payments' : 'Cash on Delivery'),
                    order.paymentStatus === 'paid' ? 'Paid' : 'COD',
                    order.outstandingBalance ? `‚Ç¨${parseFloat(order.outstandingBalance).toFixed(2)}` : '‚Ç¨0.00',
                    order.voucherNumber || 'Not Generated',
                    order.voucherNumber ? 'Generated' : 'Pending',
                    new Date(order.importedAt).toLocaleDateString('en-GB'),
                    order.notes || ''
                ];
            });
            
            const csvContent = [csvHeaders, ...csvRows]
                .map(row => row.map(cell => `"${cell}"`).join(','))
                .join('\n');
            
            // Download CSV file with comprehensive filename
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            const timestamp = new Date().toISOString().split('T')[0];
            link.download = `geniki_orders_export_${selectedOrders.size}_orders_${timestamp}.csv`;
            link.click();
            
            // Show success message with details
            showAlert(`‚úÖ Successfully exported ${selectedOrders.size} orders to CSV with comprehensive details`, 'success');
        }

