        // Packing List Export Function
        async function exportPackingList() {
            ensureSelectionInit();
            
            if (selectedOrders.size === 0) {
                showAlert('Please select orders first', 'error');
                return;
            }

            const selectedOrderData = currentOrders.filter(order => selectedOrders.has(order.orderId));
            
            // Create CSV rows array
            const csvRows = [];
            const productCombinations = new Map(); // Track combinations and their counts
            
            // Add header
            csvRows.push(['Order ID', 'Products']);
            
            // Add individual order lines
            selectedOrderData.forEach(order => {
                // Format products for this order
                let productsText = '';
                if (order.products && Array.isArray(order.products)) {
                    productsText = order.products.map(p => `${p.quantity}x ${p.name}`).join('; ');
                } else if (order.lineItems) {
                    productsText = order.lineItems;
                } else {
                    productsText = 'No products listed';
                }
                
                // Add to CSV rows
                csvRows.push([order.orderId || order.orderName, productsText]);
                
                // Count this product combination
                if (productCombinations.has(productsText)) {
                    productCombinations.set(productsText, productCombinations.get(productsText) + 1);
                } else {
                    productCombinations.set(productsText, 1);
                }
            });
            
            // Add empty row separator
            csvRows.push(['', '']);
            
            // Add packing summary header
            csvRows.push(['TOTAL:', '']);
            
            // Sort combinations by quantity (descending) then alphabetically
            const sortedCombinations = Array.from(productCombinations.entries())
                .sort((a, b) => {
                    if (b[1] !== a[1]) return b[1] - a[1]; // Sort by quantity desc
                    return a[0].localeCompare(b[0]); // Then alphabetically
                });
            
            // Add packing summary rows
            sortedCombinations.forEach(([products, count]) => {
                csvRows.push([`QTY ${count}`, products]);
            });
            
            // Convert to proper CSV format
            const csvContent = csvRows.map(row => 
                row.map(field => 
                    // Escape fields containing commas, quotes, or newlines
                    typeof field === 'string' && (field.includes(',') || field.includes('"') || field.includes('\n')) 
                        ? `"${field.replace(/"/g, '""')}"` 
                        : field
                ).join(',')
            ).join('\n');
            
            // Download CSV file
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            const timestamp = new Date().toISOString().split('T')[0];
            link.download = `packing_list_${selectedOrders.size}_orders_${timestamp}.csv`;
            link.click();
            
            // Show success message with packing details
            const uniqueCombinations = productCombinations.size;
            showAlert(`‚úÖ Packing list exported: ${selectedOrders.size} orders, ${uniqueCombinations} unique product combinations`, 'success');
        }

